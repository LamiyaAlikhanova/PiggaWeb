@model List<Chefs>
@{
    int count = 0;
}
<div class="container">
    <h1><a class="btn btn-primary" asp-action="Create">Create</a></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.FullName</td>
                    <td>@item.Description</td>
                    <td><img width="100" src="~/Uploadd/@item.ImgUrl"></img></td>
                    <td><a class="btn btn-dark" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </td>

                </tr>

            }

        </tbody>
    </table>
</div>